<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_form">
            <block class="Ecentura\CustomerProducts\Block\Adminhtml\Customeredit\Tab\View" name="product_tab">
                <arguments>
                    <argument name="tab_label" xsi:type="string" translate="true"> Custom Tab Label</argument>
                    <argument name="sort_order" xsi:type="number">100</argument>
                </arguments>
                <block class="Magento\Framework\View\Element\Template" name="selected_products" template="Ecentura_CustomerProducts::customer/form/hidden.phtml"/>
            </block>
        </referenceBlock>
    </body>
</page>
